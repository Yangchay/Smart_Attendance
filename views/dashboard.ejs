<h1 class="text-5xl font-extrabold text-center text-blue-800 mb-10 leading-tight">
    <i class="fas fa-chalkboard-teacher mr-3 text-blue-600"></i> Welcome, <span class="text-blue-700"><%= user.name %></span>!
</h1>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
    <div class="bg-blue-50 p-8 rounded-2xl shadow-lg border border-blue-200 hover:shadow-xl transition duration-300">
        <h2 class="text-3xl font-bold text-blue-700 mb-6 flex items-center pb-3 border-b border-blue-200">
            <i class="fas fa-users mr-4 text-blue-600"></i> My Students
        </h2>
        <% if (students && students.length > 0) { %>
            <ul class="list-none space-y-3 mt-5">
                <% students.forEach(student => { %>
                    <li class="text-xl text-gray-800 flex items-center bg-blue-100 p-3 rounded-lg border border-blue-200 shadow-sm">
                        <i class="fas fa-user-graduate mr-3 text-blue-500"></i> <%= student.name %>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p class="text-gray-600 italic text-lg mt-5 p-4 bg-blue-100 rounded-lg border border-blue-200">No students added yet. Click "Add Student" to get started.</p>
        <% } %>
        <div class="mt-8 text-center">
            <a href="/students/add" class="btn-primary text-lg px-6 py-3 rounded-lg flex items-center justify-center">
                <i class="fas fa-plus-circle mr-3"></i> Add New Student
            </a>
        </div>
    </div>

    <div class="bg-green-50 p-8 rounded-2xl shadow-lg border border-green-200 hover:shadow-xl transition duration-300">
        <h2 class="text-3xl font-bold text-green-700 mb-6 flex items-center pb-3 border-b border-green-200">
            <i class="fas fa-check-circle mr-4 text-green-600"></i> Mark Attendance
        </h2>

        <div class="space-y-5 mb-6">
            <div>
                <label for="attendanceDate" class="block text-gray-700 text-base font-semibold mb-2">Select Date:</label>
                <input type="date" id="attendanceDate" value="<%= currentDate %>"
                       class="shadow-sm border border-gray-300 rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition duration-200">
            </div>

            <div>
                <label for="attendanceTime" class="block text-gray-700 text-base font-semibold mb-2">Select Time:</label>
                <input type="time" id="attendanceTime" value="<%= new Date().toLocaleTimeString('en-US', { hour12: false, hour: '2-digit', minute: '2-digit' }) %>"
                       class="shadow-sm border border-gray-300 rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition duration-200">
            </div>

            <div>
                <button id="loadAttendanceBtn" class="btn-secondary w-full text-lg px-6 py-3 rounded-lg flex items-center justify-center">
                    <i class="fas fa-calendar-alt mr-3"></i> Load Attendance for Selected Date
                </button>
            </div>
        </div>

        <div id="attendanceListContainer" class="mt-8 border-t border-gray-200 pt-6">
            <h3 class="text-2xl font-bold text-gray-800 mb-4">Attendance for <span id="displayDate" class="text-green-700"></span></h3>
            <div class="space-y-4" id="studentAttendanceForms">
                <p class="text-gray-600 italic text-center p-4 bg-green-100 rounded-lg border border-green-200">Select a date and click "Load Attendance" to view students.</p>
            </div>
            <% // Removed the EJS logic for 'studentAttendanceForms' %>
        </div>
    </div>
</div>

<script src="/js/main.js"></script>