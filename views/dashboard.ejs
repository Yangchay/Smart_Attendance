

<h1 class="text-4xl font-bold text-center text-blue-800 mb-8">
    <i class="fas fa-chalkboard-teacher mr-2"></i> Welcome, <%= user.name %>!
</h1>

<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Student List Section -->
    <div class="bg-blue-50 p-6 rounded-lg shadow-md border border-blue-200">
        <h2 class="text-2xl font-semibold text-blue-700 mb-4 flex items-center">
            <i class="fas fa-users mr-3 text-blue-600"></i> My Students
        </h2>
        <% if (students && students.length > 0) { %>
            <ul class="list-disc list-inside space-y-2">
                <% students.forEach(student => { %>
                    <li class="text-lg text-gray-800 flex items-center">
                        <i class="fas fa-user-graduate mr-2 text-blue-500"></i> <%= student.name %>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p class="text-gray-600 italic">No students added yet. Click "Add Student" to get started.</p>
        <% } %>
        <div class="mt-6 text-center">
            <a href="/students/add" class="btn-primary">
                <i class="fas fa-plus-circle mr-2"></i> Add New Student
            </a>
        </div>
    </div>

    <!-- Mark Attendance Section -->
    <div class="bg-green-50 p-6 rounded-lg shadow-md border border-green-200">
        <h2 class="text-2xl font-semibold text-green-700 mb-4 flex items-center">
            <i class="fas fa-check-circle mr-3 text-green-600"></i> Mark Attendance
        </h2>

        <div class="mb-4">
            <label for="attendanceDate" class="block text-gray-700 text-sm font-bold mb-2">Select Date:</label>
            <input type="date" id="attendanceDate" value="<%= currentDate %>"
                   class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-green-500">
        </div>

        <div class="mb-4">
            <label for="attendanceTime" class="block text-gray-700 text-sm font-bold mb-2">Select Time:</label>
            <input type="time" id="attendanceTime" value="<%= new Date().toLocaleTimeString('en-US', { hour12: false, hour: '2-digit', minute: '2-digit' }) %>"
                   class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-green-500">
        </div>

        <div class="mb-4">
            <button id="loadAttendanceBtn" class="btn-secondary w-full">
                <i class="fas fa-calendar-alt mr-2"></i> Load Attendance for Selected Date
            </button>
        </div>

        <div id="attendanceListContainer" class="mt-6 border-t pt-4">
            <h3 class="text-xl font-semibold text-gray-800 mb-3">Attendance for <span id="displayDate"></span></h3>
            <% if (students && students.length > 0) { %>
                <div class="space-y-4" id="studentAttendanceForms">
                    <!-- Student attendance forms will be loaded here by JavaScript -->
                    <p class="text-gray-600 italic text-center">Select a date and click "Load Attendance" to view students.</p>
                </div>
            <% } else { %>
                <p class="text-gray-600 italic">No students to mark attendance for. Please add students first.</p>
            <% } %>
        </div>
    </div>
</div>

<script src="/js/main.js"></script>